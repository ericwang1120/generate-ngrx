import { createSelector } from '@ngrx/store';
import { EntityState, EntityAdapter, createEntityAdapter } from '@ngrx/entity';
import { {{properCase odd}} } from '../models/{{dashCase odd}}';
import * as {{camelCase odd}} from '../actions/{{dashCase odd}}';

export interface State extends EntityState<{{properCase odd}}> {
    loading: boolean;
}

export const adapter: EntityAdapter<{{properCase odd}}> = createEntityAdapter<{{properCase odd}}>({
    selectId: (obj: {{properCase odd}}) => obj.id,
    sortComparer: false,
});

export const initialState: State = adapter.getInitialState({
    loading: false,
});

export function reducer(
    state = initialState,
    action: {{camelCase odd}}.Actions
): State {
    switch (action.type) {
        case {{camelCase odd}}.LOAD: {
            return {
                ...state,
                loading: true,
            };
        }

        case {{camelCase odd}}.LOAD_SUCCESS: {
            return {
                ...adapter.addAll(action.payload, state),
                loading: false,
            };
        }

        case {{camelCase odd}}.LOAD_FAIL: {
            return {
                ...adapter.removeAll(state),
                loading: false,
            };
        }

        default: {
            return state;
        }
    }
}

export const getLoading = (state: State) => state.loading;
